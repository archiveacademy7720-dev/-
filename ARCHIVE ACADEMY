            <select id="regRole">
                <option value="student">‡¶∂‡¶ø‡¶ï‡ßç‡¶∑‡¶æ‡¶∞‡ßç‡¶•‡ßÄ</option>
                <option value="teacher">‡¶∂‡¶ø‡¶ï‡ßç‡¶∑‡¶ï</option>
