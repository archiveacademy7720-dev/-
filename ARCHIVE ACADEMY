    <!-- ‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶Æ‡¶°‡¶æ‡¶≤ -->
    <div class="modal" id="postModal">
        <div class="modal-content">
            <span class="close-btn" onclick="closeModal('postModal')">&times;</span>
            <h2>‡¶®‡¶§‡ßÅ‡¶® ‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶§‡ßà‡¶∞‡¶ø ‡¶ï‡¶∞‡ßÅ‡¶®</h2>
            <textarea id="postContent" rows="4" placeholder="‡¶ï‡ßÄ ‡¶∂‡¶ø‡¶ñ‡¶≤‡ßá‡¶® ‡¶Ü‡¶ú?"></textarea>
            <input type="file" id="postImage" accept="image/*">
            <button onclick="createPost()">‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶ï‡¶∞‡ßÅ‡¶®</button>
        </div>
    </div>

    <script>
        // ‡¶ó‡ßç‡¶≤‡ßã‡¶¨‡¶æ‡¶≤ ‡¶≠‡ßá‡¶∞‡¶ø‡¶Ø‡¶º‡ßá‡¶¨‡¶≤
        let currentUser = null;
        let posts = [];
        let comments = {};

        // ‡¶Ö‡¶®‡ßÅ‡¶Æ‡ßã‡¶¶‡¶ø‡¶§ ‡¶á‡¶â‡¶ú‡¶æ‡¶∞ (‡¶°‡ßá‡¶Æ‡ßã ‡¶°‡¶æ‡¶ü‡¶æ)
        const validUsers = [
            { email: 'rahim@test.com', password: '123456', name: '‡¶∞‡¶π‡¶ø‡¶Æ ‡¶â‡¶¶‡ßç‡¶¶‡¶ø‡¶®', role: 'student' },
            { email: 'karim@test.com', password: '123456', name: '‡¶ï‡¶∞‡¶ø‡¶Æ ‡¶π‡¶æ‡¶∏‡¶æ‡¶®', role: 'teacher' }
        ];

        // ‡¶°‡ßá‡¶Æ‡ßã ‡¶™‡ßã‡¶∏‡ßç‡¶ü
        const demoPosts = [
            {
                id: 1,
                userId: 1,
                userName: '‡¶°. ‡¶®‡¶æ‡¶ú‡¶Æ‡ßÅ‡¶≤ ‡¶ï‡¶∞‡¶ø‡¶Æ',
                userRole: '‡¶™‡ßç‡¶∞‡¶´‡ßá‡¶∏‡¶∞',
                time: '‡ß® ‡¶ò‡¶®‡ßç‡¶ü‡¶æ ‡¶Ü‡¶ó‡ßá',
                content: 'üöÄ ‡¶®‡¶§‡ßÅ‡¶® ‡¶ï‡ßã‡¶∞‡ßç‡¶∏ ‡¶∂‡ßÅ‡¶∞‡ßÅ ‡¶π‡¶ö‡ßç‡¶õ‡ßá: "‡¶™‡¶æ‡¶á‡¶•‡¶® ‡¶¶‡¶ø‡ßü‡ßá ‡¶°‡¶æ‡¶ü‡¶æ ‡¶∏‡¶æ‡¶Ø‡¶º‡ßá‡¶®‡ßç‡¶∏"\n\n‡¶è‡¶á ‡¶ï‡ßã‡¶∞‡ßç‡¶∏‡ßá ‡¶Ü‡¶™‡¶®‡¶ø ‡¶∂‡¶ø‡¶ñ‡¶¨‡ßá‡¶®:\n‚Ä¢ ‡¶™‡¶æ‡¶á‡¶•‡¶® ‡¶™‡ßç‡¶∞‡ßã‡¶ó‡ßç‡¶∞‡¶æ‡¶Æ‡¶ø‡¶Ç\n‚Ä¢ ‡¶°‡¶æ‡¶ü‡¶æ ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶®‡¶æ‡¶≤‡¶æ‡¶á‡¶∏‡¶ø‡¶∏\n‚Ä¢ ‡¶Æ‡ßá‡¶∂‡¶ø‡¶® ‡¶≤‡¶æ‡¶∞‡ßç‡¶®‡¶ø‡¶Ç ‡¶¨‡ßá‡¶∏‡¶ø‡¶ï‡¶∏\n‚Ä¢ ‡¶∞‡¶ø‡¶Ø‡¶º‡ßá‡¶≤ ‡¶™‡ßç‡¶∞‡¶ú‡ßá‡¶ï‡ßç‡¶ü',
                image: 'https://images.unsplash.com/photo-1555949963-aa79dcee981c?w=400',
                likes: 234,
                comments: 45,
                shares: 23,
                liked: false,
                showComments: false
            },
            {
                id: 2,
                userId: 2,
                userName: '‡¶´‡¶æ‡¶∞‡¶ø‡¶π‡¶æ ‡¶á‡¶∏‡¶≤‡¶æ‡¶Æ',
                userRole: '‡¶∂‡¶ø‡¶ï‡ßç‡¶∑‡¶æ‡¶∞‡ßç‡¶•‡ßÄ',
                time: '‡ß´ ‡¶ò‡¶®‡ßç‡¶ü‡¶æ ‡¶Ü‡¶ó‡ßá',
                content: 'üéâ ‡¶Ü‡¶Æ‡¶æ‡¶∞ ‡¶™‡ßç‡¶∞‡¶•‡¶Æ ‡¶Æ‡ßá‡¶∂‡¶ø‡¶® ‡¶≤‡¶æ‡¶∞‡ßç‡¶®‡¶ø‡¶Ç ‡¶™‡ßç‡¶∞‡¶ú‡ßá‡¶ï‡ßç‡¶ü ‡¶∏‡¶´‡¶≤‡¶≠‡¶æ‡¶¨‡ßá ‡¶∏‡¶Æ‡ßç‡¶™‡¶®‡ßç‡¶® ‡¶ï‡¶∞‡ßá‡¶õ‡¶ø!\n\n#ML #LearningJourney #ArchiveAcademy',
                image: null,
                likes: 89,
                comments: 12,
                shares: 5,
                liked: false,
                showComments: false
            }
        ];

        // ‡¶°‡ßá‡¶Æ‡ßã ‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü‡¶∏
        const demoComments = {
            1: [
                { user: '‡¶∞‡¶π‡¶ø‡¶Æ ‡¶â‡¶¶‡ßç‡¶¶‡¶ø‡¶®', comment: '‡¶¶‡¶æ‡¶∞‡ßÅ‡¶®! ‡¶ï‡¶¨‡ßá ‡¶•‡ßá‡¶ï‡ßá ‡¶∂‡ßÅ‡¶∞‡ßÅ ‡¶π‡¶ö‡ßç‡¶õ‡ßá?' },
                { user: '‡¶∏‡¶æ‡¶¶‡¶Æ‡¶æ‡¶® ‡¶∏‡¶æ‡¶ï‡¶ø‡¶¨', comment: '‡¶Ü‡¶Æ‡¶ø ‡¶∞‡ßá‡¶°‡¶ø ‡¶Ü‡¶õ‡¶ø!' }
            ],
            2: [
                { user: '‡¶§‡¶æ‡¶®‡¶ú‡¶ø‡¶®‡¶æ ‡¶Ü‡¶ï‡ßç‡¶§‡¶æ‡¶∞', comment: '‡¶Ö‡¶≠‡¶ø‡¶®‡¶®‡ßç‡¶¶‡¶®! ‡¶ï‡ßÄ ‡¶ï‡ßÄ ‡¶∂‡¶ø‡¶ñ‡¶≤‡ßá‡¶®?' }
            ]
        };

        // ‡¶™‡ßá‡¶ú ‡¶≤‡ßã‡¶° ‡¶π‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶™‡¶∞
        window.onload = function() {
            // ‡¶ö‡ßá‡¶ï ‡¶ï‡¶∞‡¶ø ‡¶á‡¶â‡¶ú‡¶æ‡¶∞ ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡¶æ ‡¶Ü‡¶õ‡ßá ‡¶ï‡¶ø‡¶®‡¶æ
            const savedUser = localStorage.getItem('currentUser');
            if (savedUser) {
                currentUser = JSON.parse(savedUser);
                updateUIForLoggedInUser();
            } else {
                // ‡¶≤‡¶ó‡¶á‡¶® ‡¶Æ‡¶°‡¶æ‡¶≤ ‡¶¶‡ßá‡¶ñ‡¶æ‡¶á
                document.getElementById('loginModal').classList.add('show');
            }

            // ‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶≤‡ßã‡¶° ‡¶ï‡¶∞‡¶ø
            loadPosts();
        };

        // ‡¶≤‡¶ó‡¶á‡¶® ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
        function login() {
            const email = document.getElementById('loginEmail').value;
            const password = document.getElementById('loginPassword').value;

            const user = validUsers.find(u => u.email === email && u.password === password);

            if (user) {
                currentUser = {
                    name: user.name,
                    email: user.email,
                    role: user.role
                };
                
                localStorage.setItem('currentUser', JSON.stringify(currentUser));
                closeModal('loginModal');
                updateUIForLoggedInUser();
                showNotification('‡¶∏‡¶´‡¶≤‡¶≠‡¶æ‡¶¨‡ßá ‡¶≤‡¶ó‡¶á‡¶® ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!', 'success');
            } else {
                showNotification('‡¶≠‡ßÅ‡¶≤ ‡¶á‡¶Æ‡ßá‡¶á‡¶≤ ‡¶¨‡¶æ ‡¶™‡¶æ‡¶∏‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶°!', 'error');
            }
        }

        // ‡¶∞‡ßá‡¶ú‡¶ø‡¶∏‡ßç‡¶ü‡ßç‡¶∞‡ßá‡¶∂‡¶® ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
        function register() {
            const name = document.getElementById('regName').value;
            const email = document.getElementById('regEmail').value;
            const password = document.getElementById('regPassword').value;
            const role = document.getElementById('regRole').value;

            if (name && email && password) {
                currentUser = { name, email, role };
                localStorage.setItem('currentUser', JSON.stringify(currentUser));
                closeModal('registerModal');
                updateUIForLoggedInUser();
                showNotification('‡¶∞‡ßá‡¶ú‡¶ø‡¶∏‡ßç‡¶ü‡ßç‡¶∞‡ßá‡¶∂‡¶® ‡¶∏‡¶´‡¶≤ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!', 'success');
                
                // ‡¶®‡¶§‡ßÅ‡¶® ‡¶á‡¶â‡¶ú‡¶æ‡¶∞‡¶ï‡ßá ‡¶≠‡ßç‡¶Ø‡¶æ‡¶≤‡¶ø‡¶° ‡¶á‡¶â‡¶ú‡¶æ‡¶∞‡ßá ‡¶Ø‡ßã‡¶ó ‡¶ï‡¶∞‡¶ø
                validUsers.push({ email, password, name, role });
            } else {
                showNotification('‡¶∏‡¶¨ ‡¶´‡¶ø‡¶≤‡ßç‡¶° ‡¶™‡ßÇ‡¶∞‡¶£ ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
            }
        }

        // ‡¶á‡¶â‡¶ú‡¶æ‡¶∞ ‡¶á‡¶®‡ßç‡¶ü‡¶æ‡¶∞‡¶´‡ßá‡¶∏ ‡¶Ü‡¶™‡¶°‡ßá‡¶ü
        function updateUIForLoggedInUser() {
            document.getElementById('userName').textContent = currentUser.name;
            document.getElementById('userRole').textContent = 
                currentUser.role === 'teacher' ? '‡¶∂‡¶ø‡¶ï‡ßç‡¶∑‡¶ï' : '‡¶∂‡¶ø‡¶ï‡ßç‡¶∑‡¶æ‡¶∞‡ßç‡¶•‡ßÄ';
        }

        // ‡¶≤‡¶ó‡¶Ü‡¶â‡¶ü
        function logout() {
            localStorage.removeItem('currentUser');
            currentUser = null;
            location.reload();
        }

        // ‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶≤‡ßã‡¶°
        function loadPosts() {
            posts = [...demoPosts];
            renderPosts();
        }

        // ‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶∞‡ßá‡¶®‡ßç‡¶°‡¶æ‡¶∞
        function renderPosts() {
            const container = document.getElementById('postsContainer');
            container.innerHTML = '';

            posts.forEach(post => {
                const postElement = createPostElement(post);
                container.appendChild(postElement);
            });
        }

        // ‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶è‡¶≤‡¶ø‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶§‡ßà‡¶∞‡¶ø
        function createPostElement(post) {
            const div = document.createElement('div');
            div.className = 'post';
            div.id = `post-${post.id}`;

            let imageHtml = '';
            if (post.image) {
                imageHtml = `<img src="${post.image}" alt="Post image">`;
            }

            let commentsHtml = '';
            if (demoComments[post.id]) {
                commentsHtml = demoComments[post.id].map(c => `
                    <div class="comment">
                        <div class="comment-pic"></div>
                        <div class="comment-content">
                            <strong>${c.user}</strong>
                            <p>${c.comment}</p>
                        </div>
                    </div>
                `).join('');
            }

            div.innerHTML = `
                <div class="post-header">
                    <div class="profile-pic" style="width: 40px; height: 40px;"></div>
                    <div class="post-info">
                        <h4>${post.userName}</h4>
                        <small>${post.userRole} ‚Ä¢ ${post.time}</small>
                    </div>
                </div>
                <div class="post-content">
                    <p>${post.content.replace(/\n/g, '<br>')}</p>
                    ${imageHtml}
                </div>
                <div class="post-stats">
                    <span>‚ù§Ô∏è ${post.likes}</span>
                    <span>üí¨ ${post.comments}</span>
                    <span>üîÑ ${post.shares}</span>
                </div>
                <div class="post-actions">
                    <button class="post-action-btn ${post.liked ? 'liked' : ''}" onclick="toggleLike(${post.id})">
                        <i class="fas ${post.liked ? 'fa-heart' : 'fa-heart'}"></i> ‡¶≤‡¶æ‡¶á‡¶ï
                    </button>
                    <button class="post-action-btn" onclick="toggleComments(${post.id})">
                        <i class="fas fa-comment"></i> ‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü
                    </button>
                    <button class="post-action-btn" onclick="sharePost(${post.id})">
                        <i class="fas fa-share"></i> ‡¶∂‡ßá‡¶Ø‡¶º‡¶æ‡¶∞
                    </button>
                </div>
                <div class="comments-section" id="comments-${post.id}">
                    ${commentsHtml}
                    <div class="comment-input">
                        <input type="text" id="comment-${post.id}" placeholder="‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶≤‡¶ø‡¶ñ‡ßÅ‡¶®...">
                        <button onclick="addComment(${post.id})">‡¶™‡ßã‡¶∏‡ßç‡¶ü</button>
                    </div>
                </div>
            `;

            return div;
        }

        // ‡¶≤‡¶æ‡¶á‡¶ï ‡¶ü‡¶ó‡¶≤
        function toggleLike(postId) {
            if (!currentUser) {
                showNotification('‡¶™‡ßç‡¶≤‡¶ø‡¶ú ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
                return;
            }

            const post = posts.find(p => p.id === postId);
            if (post) {
                post.liked = !post.liked;
                post.likes += post.liked ? 1 : -1;
                renderPosts();
                showNotification(post.liked ? '‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶≤‡¶æ‡¶á‡¶ï ‡¶ï‡¶∞‡¶æ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!' : '‡¶≤‡¶æ‡¶á‡¶ï ‡¶∏‡¶∞‡¶æ‡¶®‡ßã ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá', 'success');
            }
        }

        // ‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶ü‡¶ó‡¶≤
        function toggleComments(postId) {
            const commentsSection = document.getElementById(`comments-${postId}`);
            if (commentsSection) {
                commentsSection.classList.toggle('show');
            }
        }

        // ‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶Ø‡ßã‡¶ó
        function addComment(postId) {
            if (!currentUser) {
                showNotification('‡¶™‡ßç‡¶≤‡¶ø‡¶ú ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
                return;
            }

            const commentInput = document.getElementById(`comment-${postId}`);
            const comment = commentInput.value.trim();

            if (comment) {
                if (!demoComments[postId]) {
                    demoComments[postId] = [];
                }
                
                demoComments[postId].push({
                    user: currentUser.name,
                    comment: comment
                });

                const post = posts.find(p => p.id === postId);
                if (post) {
                    post.comments++;
                }

                commentInput.value = '';
                renderPosts();
                showNotification('‡¶ï‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶ï‡¶∞‡¶æ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!', 'success');
            }
        }

        // ‡¶®‡¶§‡ßÅ‡¶® ‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶§‡ßà‡¶∞‡¶ø
        function createPost() {
            if (!currentUser) {
                showNotification('‡¶™‡ßç‡¶≤‡¶ø‡¶ú ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
                return;
            }

            const content = document.getElementById('postContent').value;
            const imageFile = document.getElementById('postImage').files[0];

            if (content || imageFile) {
                const newPost = {
                    id: posts.length + 1,
                    userId: currentUser.id,
                    userName: currentUser.name,
                    userRole: currentUser.role === 'teacher' ? '‡¶∂‡¶ø‡¶ï‡ßç‡¶∑‡¶ï' : '‡¶∂‡¶ø‡¶ï‡ßç‡¶∑‡¶æ‡¶∞‡ßç‡¶•‡ßÄ',
                    time: '‡¶è‡¶ñ‡¶®‡¶á',
                    content: content,
                    image: imageFile ? URL.createObjectURL(imageFile) : null,
                    likes: 0,
                    comments: 0,
                    shares: 0,
                    liked: false,
                    showComments: false
                };

                posts.unshift(newPost);
                demoComments[newPost.id] = [];
                closeModal('postModal');
                renderPosts();
                showNotification('‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶§‡ßà‡¶∞‡¶ø ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!', 'success');
                
                // ‡¶á‡¶®‡¶™‡ßÅ‡¶ü ‡¶ï‡ßç‡¶≤‡¶ø‡¶Ø‡¶º‡¶æ‡¶∞
                document.getElementById('postContent').value = '';
                document.getElementById('postImage').value = '';
            }
        }

        // ‡¶´‡ßç‡¶∞‡ßá‡¶®‡ßç‡¶° ‡¶∞‡¶ø‡¶ï‡ßã‡¶Ø‡¶º‡ßá‡¶∏‡ßç‡¶ü ‡¶è‡¶ï‡¶∏‡ßá‡¶™‡ßç‡¶ü
        function acceptRequest(requestId) {
            document.getElementById(`friendRequest${requestId}`).remove();
            showNotification('‡¶´‡ßç‡¶∞‡ßá‡¶®‡ßç‡¶° ‡¶∞‡¶ø‡¶ï‡ßã‡¶Ø‡¶º‡ßá‡¶∏‡ßç‡¶ü ‡¶è‡¶ï‡¶∏‡ßá‡¶™‡ßç‡¶ü ‡¶ï‡¶∞‡¶æ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!', 'success');
        }

        // ‡¶´‡ßç‡¶∞‡ßá‡¶®‡ßç‡¶° ‡¶∞‡¶ø‡¶ï‡ßã‡¶Ø‡¶º‡ßá‡¶∏‡ßç‡¶ü ‡¶°‡¶ø‡¶ï‡ßç‡¶≤‡¶æ‡¶á‡¶®
        function declineRequest(requestId) {
            document.getElementById(`friendRequest${requestId}`).remove();
            showNotification('‡¶´‡ßç‡¶∞‡ßá‡¶®‡ßç‡¶° ‡¶∞‡¶ø‡¶ï‡ßã‡¶Ø‡¶º‡ßá‡¶∏‡ßç‡¶ü ‡¶°‡¶ø‡¶ï‡ßç‡¶≤‡¶æ‡¶á‡¶® ‡¶ï‡¶∞‡¶æ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá', 'info');
        }

        // ‡¶ï‡ßã‡¶∞‡ßç‡¶∏‡ßá ‡¶è‡¶®‡¶∞‡ßã‡¶≤
        function enrollCourse(courseId) {
            if (!currentUser) {
                showNotification('‡¶™‡ßç‡¶≤‡¶ø‡¶ú ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
                return;
            }
            showNotification('‡¶ï‡ßã‡¶∞‡ßç‡¶∏‡ßá ‡¶è‡¶®‡¶∞‡ßã‡¶≤ ‡¶ï‡¶∞‡¶æ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!', 'success');
        }

        // ‡¶á‡¶≠‡ßá‡¶®‡ßç‡¶ü ‡¶ú‡¶Ø‡¶º‡ßá‡¶®
        function joinEvent() {
            if (!currentUser) {
                showNotification('‡¶™‡ßç‡¶≤‡¶ø‡¶ú ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
                return;
            }
            showNotification('‡¶á‡¶≠‡ßá‡¶®‡ßç‡¶ü‡ßá ‡¶ú‡¶Ø‡¶º‡ßá‡¶® ‡¶ï‡¶∞‡ßá‡¶õ‡ßá‡¶®!', 'success');
        }

        // ‡¶∂‡ßá‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶™‡ßã‡¶∏‡ßç‡¶ü
        function sharePost(postId) {
            if (!currentUser) {
                showNotification('‡¶™‡ßç‡¶≤‡¶ø‡¶ú ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
                return;
            }
            
            const post = posts.find(p => p.id === postId);
            if (post) {
                post.shares++;
                showNotification('‡¶™‡ßã‡¶∏‡ßç‡¶ü ‡¶∂‡ßá‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶ï‡¶∞‡¶æ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!', 'success');
            }
        }

        // ‡¶∏‡¶æ‡¶∞‡ßç‡¶ö ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
        document.getElementById('searchInput')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            // ‡¶∏‡¶æ‡¶∞‡ßç‡¶ö ‡¶≤‡¶ú‡¶ø‡¶ï ‡¶á‡¶Æ‡¶™‡ßç‡¶≤‡¶ø‡¶Æ‡ßá‡¶®‡ßç‡¶ü ‡¶ï‡¶∞‡ßÅ‡¶®
        });

        // ‡¶®‡ßã‡¶ü‡¶ø‡¶´‡¶ø‡¶ï‡ßá‡¶∂‡¶® ‡¶¶‡ßá‡¶ñ‡¶æ‡¶®
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 20px;
                right: 20px;
                padding: 16px 24px;
                background-color: ${type === 'success' ? '#42b72a' : type === 'error' ? '#f02849' : '#1877f2'};
                color: white;
                border-radius: 8px;
                z-index: 3000;
                animation: slideIn 0.3s ease;
            `;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 3000);
        }

        // ‡¶Æ‡¶°‡¶æ‡¶≤ ‡¶ì‡¶™‡ßá‡¶®/‡¶ï‡ßç‡¶≤‡ßã‡¶ú ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
        function openLiveModal() {
            if (!currentUser) {
                showNotification('‡¶™‡ßç‡¶≤‡¶ø‡¶ú ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
                return;
            }
            showNotification('‡¶≤‡¶æ‡¶á‡¶≠ ‡¶´‡¶ø‡¶ö‡¶æ‡¶∞ ‡¶∂‡ßÄ‡¶ò‡ßç‡¶∞‡¶á ‡¶Ü‡¶∏‡¶õ‡ßá!', 'info');
        }

        function openPhotoModal() {
            if (!currentUser) {
                showNotification('‡¶™‡ßç‡¶≤‡¶ø‡¶ú ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
                return;
            }
            document.getElementById('postModal').classList.add('show');
        }

        function openFeelingModal() {
            if (!currentUser) {
                showNotification('‡¶™‡ßç‡¶≤‡¶ø‡¶ú ‡¶≤‡¶ó‡¶á‡¶® ‡¶ï‡¶∞‡ßÅ‡¶®!', 'error');
                return;
            }
            showNotification('‡¶Ö‡¶®‡ßÅ‡¶≠‡ßÇ‡¶§‡¶ø ‡¶∂‡ßá‡¶Ø‡¶º‡¶æ‡¶∞ ‡¶´‡¶ø‡¶ö‡¶æ‡¶∞ ‡¶∂‡ßÄ‡¶ò‡ßç‡¶∞‡¶á ‡¶Ü‡¶∏‡¶õ‡ßá!', 'info');
        }

        function showRegister() {
            closeModal('loginModal');
            document.getElementById('registerModal').classList.add('show');
        }

        function closeModal(modalId) {
            document.getElementById(modalId).classList.remove('show');
        }

        // ‡¶™‡ßá‡¶ú ‡¶®‡ßá‡¶≠‡¶ø‡¶ó‡ßá‡¶∂‡¶® ‡¶´‡¶æ‡¶Ç‡¶∂‡¶®
        function showPage(page) {
            const navItems = document.querySelectorAll('.nav-item');
            navItems.forEach(item => item.classList.remove('active'));
            event.target.closest('.nav-item').classList.add('active');
            
            showNotification(`${page} ‡¶™‡ßá‡¶ú ‡¶∂‡ßÄ‡¶ò‡ßç‡¶∞‡¶á ‡¶Ü‡¶∏‡¶õ‡ßá!`, 'info');
        }

        function showProfile() {
